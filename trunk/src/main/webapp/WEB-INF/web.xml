<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
			xmlns="http://java.sun.com/xml/ns/javaee" 
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
			xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
								http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="ota-engine">

	<display-name>OTA Simulacrum Web Application (simulation toolset)</display-name>

	<!-- The definition of the Root Spring Container shared by all Servlets and Filters -->  
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext.xml
		    classpath*:config/SpringBeans/*
        </param-value>
	</context-param>

	<!-- //enabling this messes up the spring context, however makes annotated spring config working,
		 // which is now made working within ota-simulacra-agent.xml
	<context-param> 
      <param-name>contextClass</param-name>
      <param-value>
          org.springframework.web.context.support.AnnotationConfigWebApplicationContext
      </param-value>
  	</context-param>
	-->
	
	<context-param>
    	<param-name>webAppRootKey</param-name>
    	<param-value>ota-simulacrum-webapp</param-value>
	</context-param>

	<!-- Creates the Spring Container shared by all Servlets and Filters --> 
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:config/default/logging.properties</param-value>
	</context-param>

	<!-- Processes application requests -->  


	<servlet>
		<display-name>OTA ShadowCAT Simulacrum REST Controller</display-name>
		<servlet-name>ota-simulacrum</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ota-simulacrum</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<filter>
    	<filter-name>httpMethodFilter</filter-name>
    	<filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
	</filter>
	<filter-mapping>
    	<filter-name>httpMethodFilter</filter-name>
    	<servlet-name>ota-simulacrum</servlet-name>
	</filter-mapping>


	<error-page>
		<error-code>400</error-code>
		<location>/WEB-INF/docs/400.jsp</location>
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/WEB-INF/docs/401.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/docs/403.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/docs/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/docs/500.jsp</location>
	</error-page>

</web-app>

